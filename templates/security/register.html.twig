{% block title %}Registreren{% endblock %}
<link href="css/sb-admin.css" rel="stylesheet">
{% block body %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    <body class="bg-dark">
<div class="container">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

    <div class="card card-login mx-auto mt-5">
        <div class="card-header">
            <h1 class="h3 mb-3 font-weight-normal">Registreren</h1>
        </div>
                <div class="card-body" style="text-align: center;">
                  {{ form_start(form) }}
                    {{ form_row(form.Voornaam) }}
                    {{ form_row(form.Achternaam) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.Username) }}
                    {{ form_row(form.password   ) }}
                    <input type="submit" class="btn btn-primary btn-block" value="Registreren">
                    <br>
                    <div class="text-center">
                        <a class="d-block small" href="{{path('app_login')}}">Inloggen</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </form>
</div>
</body>
{% endblock %}
