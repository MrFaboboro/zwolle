{% extends 'admin/adminbase.html.twig' %}


{% block body %}
<div id="content-wrapper">

<div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Dashboard</a>
        </li>
    </ol>

    <!-- Icon Cards-->
    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-address-card"></i>
                    </div>

                    {% if zwollegegevens %}

                        <div class="mr-5">{{ zwollegegevens }}  Bedrijven
                        </div>
                    {% endif %}

                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ path('admin') }}">
                    <span class="float-left">View Details</span>
                    <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
                </a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-warning o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-list"></i>
                    </div>

                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ path('admin') }}">
                    <span class="float-left">View Details</span>
                    <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
                </a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-success o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-inbox"></i>
                    </div>
{#                    {% if inbox %}#}

{#                        <div class="mr-5">{{ inbox }}  Mails in inbox#}
{#                        </div>#}
{#                    {% endif %}#}
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{ path('admin') }}">
                    <span class="float-left">View Details</span>
                    <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
                </a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-danger o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-receipt"></i>
                    </div>
{#                    {% if cards %}#}

{#                        <div class="mr-5">{{ cards }} Portfolio kaarten#}
{#                        </div>#}
{#                    {% endif %}#}
                </div>
                <a class="card-footer text-white clearfix small z-1" href="">
                    <span class="float-left">View Details</span>
                    <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
                </a>
            </div>
        </div>

    </div>
<br>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Bedrijven</div>
        <div class="card-body">
            <div class="table-responsive">

                {% if table %}
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Naam</th>
                            <th>Adres</th>
                            <th>Postcode</th>
                            <th>Stad</th>
                            <th>Email</th>
                            <th>Telefoonnummer</th>
                            <th>Bekijken</th>

                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Naam</th>
                            <th>Adres</th>
                            <th>Postcode</th>
                            <th>Stad</th>
                            <th>Email</th>
                            <th>Telefoonnummer</th>
                            <th>Bekijken</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for table in table %}
                            <tr>
                                <td>{{ table.id }}</td>
                                <td>{{ table.ORG }}</td>
                                <td>{{ table.ADD1 }} {{ table.ADD2 }} {{ table.ADD3 }} </td>
                                <td>{{ table.PC }}</td>
                                <td>{{ table.CITY }}</td>
                                <td>{{ table.Email1 }}</td>
                                <td>{{ table.Phone1 }}</td>
                                <td style="text-align: center;">  <a href="adminbase.html.twig"><i class="fas fa-eye"></i> </a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>Niks gevonden om weer te geven.</p>
                {% endif %}
            </div>
        </div>
    </div>

    {% endblock %}
